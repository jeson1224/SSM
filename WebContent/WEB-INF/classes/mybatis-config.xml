<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC  
    "-//mybatis.org//DTD Config 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-config.dtd">  
<configuration>   
	<!-- 配置映射类的别名 -->  
    <typeAliases>  
        <typeAlias alias="User" type="com.db.model.User" />  
        <typeAlias alias="Acticle" type="com.db.model.Acticle" />
    </typeAliases>    
    <!-- 配置Mapper文件的路径 -->  
    <mappers>  
        <mapper resource="/com/db/dao/UserDao.xml"/>   
        <mapper resource="/com/db/dao/ActicleDao.xml"/>  
    </mappers>  
</configuration>